{
  "name": "xticket-vue-printer",
  "productName": "Xticket Printer",
  "version": "0.1.0",
  "description": "Xticket Printer",
  "author": "hiramglz92@gmail.com",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "lint": "vue-cli-service lint",
    "electron:build": "vue-cli-service electron:build",
    "dev": "vue-cli-service electron:serve",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "main": "./dist_electron/index.js",
  "type": "module",
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "autoprefixer": "^10",
    "axios": "^1.2.0",
    "core-js": "^3.8.3",
    "electron-pos-printer": "^1.3.6",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "element-ui": "^2.15.12",
    "moment": "^2.29.4",
    "postcss": "^8",
    "tailwindcss": "^3",
    "vue": "^2.6.14",
    "vue-axios": "^3.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "electron": "^13.0.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^8.0.3",
    "tailwindcss": "^3.2.4",
    "vue-cli-plugin-electron-builder": "~2.1.1",
    "vue-cli-plugin-tailwind": "~3.0.0",
    "vue-template-compiler": "^2.6.14"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url" : "git+https://gitlab.com/higonz/xticket-vue-printer.git",
    "release": "latest"
  },
  "build": {
    "appId": "com.xticket.PrintService",
    "artifactName": "${productName}-${version}.${ext}",
    "publish": {
    "provider": "generic",
    "url": "https://gitlab.com/api/v4/projects/41372921/jobs/artifacts/master/raw/dist?job=build"
    },
    "win": {
			"target": [
				"nsis"
			],
			"verifyUpdateCodeSignature": false
		}
  }
}
